<?xml version="1.0"?>
<project name="lint" default="main">
    <fileset dir="." id="phpfiles">
        <include name="**/*.php"/>
        <include name="vendor/**"/>
    </fileset>
    <target name="main">
        <phingcall target="phplint"/>
    </target>
    <target name="phplint">
        <phplint haltonfailure="true">
            <fileset refid="phpfiles"/>
        </phplint>
    </target>
</project>